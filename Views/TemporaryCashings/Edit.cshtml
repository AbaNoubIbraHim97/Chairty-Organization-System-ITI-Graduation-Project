@model WebApplication1.Models.TemporaryCashing

@{
    ViewBag.Title = "Edit";
}

<h2>تعديل</h2>
<h3>الرصيد الحالي : @ViewBag.BalanceID ج</h3>
<h3>@ViewBag.Cost</h3>
<h3 style="color:darkred; font-weight:bold;"> @ViewBag.Balance </h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)


            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("PatientID", null, "-- أختر المريض --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PatientID, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.PatientID, "اسم المريض", htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("MedicineID", null, "-- أختر الدواء --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MedicineID, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.MedicineID, "اسم الدواء", htmlAttributes: new { @class = "control-label col-md-2" })

            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberofUnites, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberofUnites, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.NumberofUnites, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateCreated, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.DateCreated, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.DateCreated, "تاريخ الصرف", htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            @*<div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-2" })

                </div>*@



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="حفظ" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("عودة إلي قائمة المصروفات المؤقتة", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
