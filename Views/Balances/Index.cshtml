@model IEnumerable<WebApplication1.Models.Balance>

@{
    ViewBag.Title = "Index";
}

@*<h2>الرصيد</h2>*@

<p>
    @if (Request.IsAuthenticated)
    {
        if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("إضافة رصيد", "Create", null,htmlAttributes: new { @class = "btn btn-primary" })

        }
       
    }

</p>
<table>
    <tr>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.TotalValue)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TotalValue)
        </td>
       
    </tr>
}

</table>
